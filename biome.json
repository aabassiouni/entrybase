{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"lineWidth": 120,
		"indentStyle": "tab",
		"indentWidth": 4
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noSvgWithoutTitle": "off"
			},
			"correctness": {
				"noUnusedVariables": "warn",
				"useExhaustiveDependencies": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"style": {
				"useBlockStatements": "error",
				"noNonNullAssertion": "off"
			},
			"performance": {
				"noDelete": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			},
			"complexity": {
				"noForEach": "off"
			}
		},
		"ignore": [
			".vitest",
			"node_modules",
			".next",
			"dist",
			".nuxt",
			"./packages/api/src/openapi.d.ts",
			".wrangler",
			".react-email"
		]
	}
}
